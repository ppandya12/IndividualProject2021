<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".thirdFragment">

    <TextView
        android:id="@+id/myOrder"
        android:layout_width="341dp"
        android:layout_height="49dp"
        android:fontFamily="@font/happy_monkey"
        android:text="My Order"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#B0000000"
        android:textIsSelectable="false"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.038" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="416dp"
        android:layout_height="629dp"
        android:layout_marginTop="27dp"
        android:background="@drawable/layout_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myOrder">


        <Button
            android:id="@+id/button"
            android:layout_width="224dp"
            android:layout_height="56dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="70dp"
            android:backgroundTint="#DCFFFFFF"
            android:elevation="4dp"
            android:fontFamily="@font/happy_monkey"
            android:hapticFeedbackEnabled="true"
            android:text="PAY NOW"
            android:textAlignment="center"
            android:textColor="#FB8C00"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/switch1" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="403dp"
            android:layout_height="256dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="3dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="321dp"
                android:layout_height="70dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="34dp"
                app:cardBackgroundColor="#FFF"
                app:cardCornerRadius="15dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="57dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif"
                        android:text="1"
                        android:textAlignment="center"
                        android:textAllCaps="true"
                        android:textColor="#191818"
                        android:textSize="24sp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp"
                        android:layout_weight="1"
                        android:fontFamily="@font/happy_monkey"
                        android:text="Classic Margherita"
                        android:textColor="#191818"
                        android:textSize="16dp" />

                    <ImageButton
                        android:id="@+id/imageButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="#FFFFFF"
                        android:src="@drawable/ic_delete" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="321dp"
                android:layout_height="70dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="34dp"
                app:cardBackgroundColor="#FFF"
                app:cardCornerRadius="15dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:text="1"
                        android:textAlignment="center"
                        android:textColor="#191818"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp"
                        android:layout_weight="1"
                        android:fontFamily="@font/happy_monkey"
                        android:text="Farmhouse"
                        android:textColor="#191818"
                        android:textSize="16dp" />

                    <ImageButton
                        android:id="@+id/imageButton3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="#FFFFFF"
                        android:src="@drawable/ic_delete" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="321dp"
                android:layout_height="70dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="34dp"
                android:layout_marginBottom="400dp"
                app:cardBackgroundColor="#FFF"
                app:cardCornerRadius="15dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView27"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:text="2"
                        android:textAlignment="center"
                        android:textColor="#191818"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textView28"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15sp"
                        android:layout_weight="1"
                        android:fontFamily="@font/happy_monkey"
                        android:text="Veggie Dream"
                        android:textColor="#191818"
                        android:textSize="16dp" />

                    <ImageButton
                        android:id="@+id/imageButton4"
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="#FFFFFF"
                        android:src="@drawable/ic_delete" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="398dp"
            android:layout_height="31dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="116dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/happy_monkey"
                android:paddingStart="20sp"
                android:text="Subtotal "
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/happy_monkey"
                android:paddingEnd="20sp"
                android:text="£45.00"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="403dp"
            android:layout_height="120dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="397dp"
                android:layout_height="51dp"
                android:fontFamily="@font/happy_monkey"
                android:paddingStart="20sp"
                android:paddingTop="10sp"
                android:text="Enter Voucher/Promo Code "
                android:textAlignment="textStart"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/editTextTextPersonName4"
                    android:layout_width="272dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/happy_monkey"
                    android:inputType="textPersonName"
                    android:paddingStart="20sp"
                    android:text="Enter code here"
                    android:textColor="#454343" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20sp"
                    android:layout_weight="1"
                    android:backgroundTint="#FFFFFF"
                    android:elevation="4dp"
                    android:fontFamily="@font/happy_monkey"
                    android:hapticFeedbackEnabled="true"
                    android:text="Enter"
                    android:textColor="#FB8C00"
                    android:textStyle="bold"
                    app:cornerRadius="15sp" />
            </LinearLayout>

        </LinearLayout>

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/happy_monkey"
            android:text="Food to come as soon as prepared "
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorLink="@color/white"
            android:textSize="18sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            tools:ignore="UseSwitchCompatOrMaterialXml" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>